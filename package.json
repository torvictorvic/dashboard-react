{
    "name": "sa-3d-sales-dashboard",
    "version": "1.0.0",
    "description": "React 18 + Vite dashboard rendering 3-D bar charts of 2024 South-American sales using Plotly.js. Includes full React-hook showcase, ESLint, Prettier, Jest, and Husky.",
    "author": "Victor Manuel Suarez Torres <victormst@gmail.com>",
    "license": "MIT",
    "keywords": [
      "react",
      "vite",
      "plotly",
      "dashboard",
      "3d-chart",
      "south-america",
      "sales",
      "hooks"
    ],
    "type": "module",
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    },
    "scripts": {
      "dev": "vite",
      "build": "vite build",
      "preview": "vite preview",
      "test": "jest",
      "lint": "eslint \"src/**/*.{js,jsx,json}\" --max-warnings=0",
      "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
      "prepare": "husky install"
    },
    "dependencies": {
      "plotly.js": "^2.30.0",
      "react": "^18.3.0",
      "react-dom": "^18.3.0",
      "react-plotly.js": "^3.0.1"
    },
    "devDependencies": {
      "@testing-library/jest-dom": "^6.4.0",
      "@testing-library/react": "^15.0.0",
      "@types/jest": "^29.5.11",
      "@types/react": "^18.3.0",
      "@types/react-dom": "^18.3.0",
      "eslint": "^9.4.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-react": "^7.34.1",
      "husky": "^9.0.10",
      "jest": "^29.7.0",
      "lint-staged": "^15.2.2",
      "prettier": "^3.3.1",
      "vite": "^5.2.0"
    },
    "lint-staged": {
      "src/**/*.{js,jsx,json,css,md}": [
        "prettier --write",
        "eslint --fix"
      ]
    },
    "jest": {
      "testEnvironment": "jsdom",
      "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"],
      "moduleNameMapper": {
        "\\.(css|svg|png)$": "identity-obj-proxy"
      }
    }
  }